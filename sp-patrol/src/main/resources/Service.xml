<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
        http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-2.5.xsd"
       xmlns:context="http://www.springframework.org/schema/context"
>
    <!-- 添加注解驱动 -->
    <context:annotation-config/>
    <!-- 自动扫描 -->

    <bean id="ServerCore" class="com.zzht.service.patrol.common.ServiceCore">
    </bean>
    <bean id="jsonProvider" class="org.apache.cxf.jaxrs.provider.json.JSONProvider">
        <property name="dropRootElement" value="true"/>
        <property name="dropCollectionWrapperElement" value="true"/>
    </bean>
        <!--restful webservice bean-->
    <bean id="personRestService" class="com.zzht.service.patrol.webservice.restful.PersonRestServiceImpl"/>
    <!--soap webservice bean-->
    <bean id="personSoapService" class="com.zzht.service.patrol.webservice.soap.PersonSoapServiceImpl"/>
</beans>